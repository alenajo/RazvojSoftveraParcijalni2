<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ptf.rs.parcijala2.controllers.FormaController">
   <top>
      <Label text="Kreiranje proizvoda" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <GridPane hgap="10.0" vgap="15.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
          <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
            <Label text="Naziv" />
            <Label text="Opis" GridPane.rowIndex="1" />
            <Label text="Cijena" GridPane.rowIndex="2" />
            <Label text="Kategorija" GridPane.rowIndex="3" />
            <Label text="Kolicina" GridPane.rowIndex="4" />
            <Label text="Popust na kasi uz placanje gotovinom" GridPane.rowIndex="5" />
            <TextField fx:id="nazivField" GridPane.columnIndex="1" />
            <TextArea fx:id="opisArea" minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="cijenaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="kolicinaField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="kategorijaBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <CheckBox fx:id="popustCheck" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
        <Button onAction="#kreirajProizvod" mnemonicParsing="false" text="Dodaj proizvod" />
        <Button onAction="#resetujPolja" mnemonicParsing="false" text="Resetuj polja" />
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</BorderPane>
